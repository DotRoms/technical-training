<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="estate_property_view_list" model="ir.ui.view">
    <field name="name">estate.property.view.list</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">

      <list string="Properties">
        <field name="name" />
        <field name="postcode" />
        <field name="bedroom" />
        <field name="living_area" />
        <field name="expected_price" />
        <field name="selling_price" />
        <field name="date_availability" />
        <field name="tag_ids" widget="many2many" />
      </list>

    </field>
  </record>

  <record id="estate_property_view_form" model="ir.ui.view">
    <field name="name">estate.property.view.form</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <form string="Property">
        <header>
          <button name="cancel" type="object" class="btn-primary" string="Cancel"
            invisible="state in ['sold']" />
          <button name="sold" type="object" class="btn-primary" string="Sold"
            invisible="state in ['cancelled']" />
        </header>
        <sheet>
          <!-- Titre -->
          <div class="oe_title">
            <h1>
              <field name="name" />
            </h1>
          </div>

          <!-- Informations principales -->
          <group string="Informations générales">
            <group>
              <field name="state" />
              <field name="property_type_id" />
              <field name="tag_ids" widget="many2many_tags" />
            </group>

          </group>

          <!-- Localisation -->
          <group string="Localisation">
            <field name="postcode" />
            <field name="date_availability" />
          </group>

          <!-- Prix -->
          <group string="Prix">
            <group>
              <field name="expected_price" />
              <field name="selling_price" />
              <field name="best_price" />
            </group>
          </group>

          <!-- Surface & Jardin -->
          <group string="Surface et Jardin">
            <group>
              <field name="living_area" />
              <field name="total_area" />
            </group>
            <group>
              <field name="garden" />
              <field name="garden_area" />
              <field name="garden_orientation" />
            </group>
          </group>

          <!-- Onglets -->
          <notebook>
            <page string="Description">
              <field name="description" />
              <field name="bedroom" />
            </page>
            <page string="Other infos">
              <group>
                <field name="salesperson_id" widget="many2one" />
                <field name="buyer_id" widget="many2one" />
              </group>
            </page>
            <page string="Offers">
              <group>
                <field name="offer_ids" widget="one2many" />
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>


  <record id="estate_property_view_search" model="ir.ui.view">
    <field name="name">estate.property.view.search</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">

      <!-- Create new filter -->
      <search string="Pro">
        <field name="name" string="Title" />
        <field name="postcode" />
        <field name="expected_price" />
        <field name="bedroom" />
        <field name="living_area" />
        <separator />
        <filter name="available" string="Available"
          domain="[('state', 'in', ['new','offer_received'])]" />
        <group expand="1" string="Group by">
          <filter name="postcode" string="Postcode" context="{'group_by':'postcode'}" />
        </group>
      </search>
    </field>
  </record>

</odoo>